{
  "name": "meteor-react-todos",
  "private": true,
  "scripts": {
    "lint": "./node_modules/.bin/eslint . --ignore-pattern 'packages/**'",
    "start": "meteor run",
    "test": "meteor test --driver-package practicalmeteor:mocha",
    "test-phantom": "meteor test --once --driver-package dispatch:mocha-phantomjs",
    "test-phantom-watch": "TEST_WATCH=1 meteor test --driver-package dispatch:mocha-phantomjs",
    "test-app": "meteor test --full-app --driver-package practicalmeteor:mocha"
  },
  "dependencies": {
    "babel-runtime": "^6.18.0",
    "bcrypt": "^0.8.7",
    "classnames": "^2.2.5",
    "meteor-node-stubs": "~0.2.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  },
  "devDependencies": {
    "eslint": "^3.8.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-meteor": "^4.0.1",
    "eslint-plugin-react": "^6.4.1"
  }
}
